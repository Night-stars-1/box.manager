<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="?attr/bg"
  android:orientation="vertical"
  android:padding="20dp"
  tools:context=".ui.core.CoreActivity">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="50dp">

    <TextView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:gravity="center"
      android:text="@string/updater_core"
      android:textSize="32sp"
      android:textStyle="bold" />
  </LinearLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="35dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="5dp">

    <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <TextView
        android:id="@+id/tvClash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:textSize="16sp"
        tools:text="test" />

      <ProgressBar
        android:id="@+id/prgClash"
        style="@android:style/Widget.DeviceDefault.ProgressBar"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/tvClash"
        android:visibility="gone"
        tools:visibility="visible" />

      <ProgressBar
        android:id="@+id/prgHrzClash"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvClash"
        android:layout_marginStart="15dp"
        android:layout_marginTop="8dp"
        android:progress="0"
        android:visibility="gone"
        tools:progress="20"
        tools:visibility="visible" />

      <ImageView
        android:id="@+id/btnClash"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="15dp"
        android:src="@drawable/ic_download"
        android:visibility="gone"
        app:tint="@color/material_blue"
        tools:visibility="visible" />

      <ImageView
        android:id="@+id/imgErrorClash"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="15dp"
        android:src="@drawable/ic_error"
        android:visibility="gone"
        app:tint="@color/material_red"
        tools:visibility="visible" />

      <ImageView
        android:id="@+id/imgDoneClash"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="15dp"
        android:src="@drawable/ic_done"
        android:visibility="gone"
        app:tint="@color/green"
        tools:visibility="visible" />

    </RelativeLayout>
  </LinearLayout>
</LinearLayout>